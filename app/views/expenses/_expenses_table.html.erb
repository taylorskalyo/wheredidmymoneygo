<table>
  <tr>
    <td><h2 class="sub-header"><%= heading ||= "Expenses"%></h2></td>
    <td style="padding-left: 25px">
      <h3><%= link_to "Add new expense", new_expense_path, class: "btn btn-default"%></h3>
    </td>
  </tr>
</table>

<div class="table-responsive">
<table class="table table-striped">
  <tr>
    <th>Amount</th>
    <th>Date</th>
    <th>Category</th>
    <th class="hidden-xs">Description</th>
    <th>Action</th>
  </tr>

<% @expenses.each do |expense| %>
  <tr>
    <td><%= number_to_currency(expense.amount) %></td>
    <td><%= expense.date.to_date %></td>
    <td><%= expense.category %></td>
    <td class="hidden-xs"><%= expense.description %></td>
    <td><div class="btn-group">
      <%= link_to 'View', expense_path(expense), class: "btn btn-default" %>
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
        <span class="sr-only">Toggle Dropdown</span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to 'Edit', edit_expense_path(expense) %></li>
        <li><%= link_to 'Delete', expense_path(expense),
           method: :delete, data: { confirm: 'Are you sure?' } %></li>
      </ul>
    </div></td>
  </tr>
<% end %>
</table>
</div>

