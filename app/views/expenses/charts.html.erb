<div class="form-inline" role="form">
  <div class="form-group">
    <div class="col-sm-8 col-md-5 col-lg-4">
      <div class="input-group">
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span> From
        </span>
        <%= date_field_tag :from_date, {}, :onchange => "update_data();",
          :class => "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-8 col-md-5 col-lg-4">
      <div class="input-group">
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span> To
        </span>
        <%= date_field_tag :to_date, {}, :onchange => "update_data();",
          :class => "form-control" %>
      </div>
    </div>
  </div>
</div>
<%= render :partial => 'graphs/pie_chart' %>
