<h1>Log In</h1>

<%= form_tag(:action => :create) do %>
  <p>
    <%= label_tag :email %><br>
    <%= text_field_tag :email %>
  </p>

  <p>
    <%= label_tag :password %><br>
    <%= password_field_tag :password  %>
  </p>

  <p>
    <%= submit_tag "Log In", :class => "btn btn-default" %>
  </p>
<% end %>

