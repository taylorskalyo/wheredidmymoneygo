<h1>Log In</h1>

<%= form_tag({:action => :create}, {:class => "form-horizontal", :role => "form"}) do %>
  <div class="form-group">
    <div class="col-sm-8 col-md-5 col-lg-4">
      <div class="input-group">
        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
        <%= text_field_tag :email, nil, class: "form-control", placeholder: "Email" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-8 col-md-5 col-lg-4">
      <div class="input-group">
        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
        <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-8 col-md-5 col-lg-4">
      <%= submit_tag "Log In", :class => "btn btn-primary" %>
      <%= link_to "Sign Up", signup_path, class: "btn btn-default pull-right" %>
    </div>
  </div>
<% end %>

